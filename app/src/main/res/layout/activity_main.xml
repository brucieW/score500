<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/newGame"
        android:layout_width="327dp"
        android:layout_height="0dp"
        android:contentDescription="@string/new_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/new_game" />

    <Button
        android:id="@+id/resumeGameButton"
        android:layout_width="336dp"
        android:layout_height="91dp"
        android:backgroundTint="#780404"
        android:text="@string/resume_game"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newGame" />

    <ImageView
        android:id="@+id/cardsView"
        android:layout_width="389dp"
        android:layout_height="282dp"
        android:layout_marginBottom="64dp"
        android:contentDescription="@string/aces"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/aces" />

</androidx.constraintlayout.widget.ConstraintLayout>